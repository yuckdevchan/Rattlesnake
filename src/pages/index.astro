---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '../components/global.css';
import { Icon } from 'astro-icon'
---

<Layout title="Rattlesnake - Music in your Hands.">
  <div class="flex">
    <div class="w-1/3 p-4">
      <h1><span class="text-gradient">Rattlesnake</span></h1>
    </div>
    <div class="w-2/3 p-4" style="max-width: 20rem;"> <!-- Adjust the max-width as needed -->
      <!-- Right side content for vertically stacked cards -->
      <ul role="list" class="space-y-4">
        <Card
          href="/"
          title="Home"
          icon="mdi:home-outline"
        />
        <Card
          href="https://astro.build/integrations/"
          title="Artists"
          icon="mdi:artist-outline"
        />
        <Card
          href="https://astro.build/themes/"
          title="Albums"
          icon="mdi:album"
        />
        <Card
          href="https://astro.build/chat/"
          title="Songs"
          icon="mdi:music-note-eighth"
        />
        <Card
          href="https://astro.build/chat/"
          title="Settings"
          icon="mdi:cog"
        />
        <Card
          href="http://localhost:8082"
          title="Sonic Screwdriver"
          icon="mdi:screwdriver"
        />
      </ul>
    </div>
  </div>
</Layout>
